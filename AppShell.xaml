<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AplicatieMobila.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AplicatieMobila">

    <TabBar>
        <!-- Tab-ul pentru Produse -->
        <ShellContent Title="Produse" ContentTemplate="{DataTemplate local:AboutPage}" />
        <ShellContent Title="Buchete" ContentTemplate="{DataTemplate local:BouquetsPage}" Route="bouquets" />
        <!-- Tab-ul pentru Cosul de cumparaturi -->
        <ShellContent Title="Cosul meu" ContentTemplate="{DataTemplate local:CartPage}" />
        

    </TabBar>

</Shell>
